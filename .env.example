# Environment Configuration
# Copy this file to .env and fill in your values

# Flask Configuration
FLASK_ENV=development                    # development | testing | production
FLASK_DEBUG=true                         # Enable debug mode (development only!)
SECRET_KEY=change-me-to-a-secure-key     # Flask secret key for sessions

# Database
DATABASE_URL=sqlite:///data.db           # SQLite for local dev
# DATABASE_URL=postgresql+psycopg2://user:pass@host:5432/dbname  # PostgreSQL for production

# Redis (caching and Celery)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Caching
CACHE_TYPE=SimpleCache                   # SimpleCache for dev, RedisCache for prod
CACHE_DEFAULT_TIMEOUT=300                # Cache timeout in seconds

# Rate Limiting
RATELIMIT_STORAGE_URL=                   # Leave empty for in-memory, use redis:// for distributed

# Market Data APIs
IEX_API_TOKEN=                           # IEX Cloud API token
ALPACA_KEY=                              # Alpaca API key
ALPACA_SECRET=                           # Alpaca API secret
ALPACA_BASE_URL=https://paper-api.alpaca.markets  # Use paper trading URL for testing

# Observability
SENTRY_DSN=                              # Sentry DSN for error tracking (optional)

# Email Configuration (optional)
EMAIL_PROVIDER=SMTP                      # Email provider
SMTP_SERVER=smtp.example.com             # SMTP server
SMTP_PORT=587                            # SMTP port
SMTP_USERNAME=                           # SMTP username
SMTP_PASSWORD=                           # SMTP password
EMAIL_FROM="App <no-reply@example.com>"  # From address

# Token Configuration
FRONTEND_VERIFY_URL=http://localhost:8000/auth/verify?token=
EMAIL_TOKEN_EXPIRY=1800                  # Token expiry in seconds

# Server Configuration (run.py)
PORT=8000                                # Server port
